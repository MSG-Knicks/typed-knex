{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": false,
        "target": "ES2017",
        "experimentalDecorators": true,
        "strict": true,
        "strictPropertyInitialization": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "outDir": "build"
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}